#!/usr/bin/env dagon

require("readline")

Idg:
  read-line:
    Readline.readline("idg:> ", true)

  start:
    continue: true
    while continue
      line: read-line
      if line
        begin ->
          result: eval(line)
          print("=> ")
          puts(result)
        rescue ->(e)
          puts(e.message)
      else
        continue: false

idg: Idg()
idg.start()
