describe(IO) ->
  io-puts(value):
    pipes: IO.pipe
    read: pipes[0]
    write: pipes[1]
    write.puts(value)
    write.close
    read.read

  it("has a fileno") ->
    assert-equal(STDIN.fileno, 0)

  it("can puts strings") ->
    assert-equal(io-puts("Wombat"), "Wombat\n")

  it("can puts numbers") ->
    assert-equal(io-puts(1), "1\n")

  it("can print arrays") ->
    assert-equal(io-puts([1, 2, 3]), "1\n2\n3\n")

  it("can puts multple values") ->
    pipes: IO.pipe
    read: pipes[0]
    write: pipes[1]
    write.puts("Hello", "world")
    write.close
    value: read.read
    assert-equal(value, "Hello\nworld\n")
